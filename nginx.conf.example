# Nginx 설정 예제
# /etc/nginx/sites-available/futures-baccarat-board

server {
    listen 80;
    server_name your-domain.com;  # 도메인 또는 EC2 퍼블릭 IP

    # 로그 설정
    access_log /var/log/nginx/futures-baccarat-board-access.log;
    error_log /var/log/nginx/futures-baccarat-board-error.log;

    # 클라이언트 최대 바디 크기
    client_max_body_size 10M;

    location / {
        proxy_pass http://127.0.0.1:9000;
        proxy_http_version 1.1;
        
        # WebSocket 지원
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # 기본 헤더
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 타임아웃 설정 (WebSocket을 위해 길게)
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 86400s;  # 24시간 (WebSocket 유지)
        
        # 버퍼 설정
        proxy_buffering off;
    }

    # 정적 파일 직접 서빙 (선택사항)
    location /static {
        alias /opt/futures-baccarat-board/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
}

